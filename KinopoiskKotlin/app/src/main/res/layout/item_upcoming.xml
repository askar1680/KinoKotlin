<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <ImageView
    android:src="@drawable/placeholder"
    android:scaleType="centerCrop"
    android:id="@+id/upcoming_image_view"
    android:background="@color/colorPrimaryDark"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/upcoming_trailer_view"
    app:layout_constraintHorizontal_weight="6"
    app:layout_constraintDimensionRatio="6:9"
    />


  <View
    android:id="@+id/upcoming_trailer_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:background="@color/black"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/upcoming_image_view"
    app:layout_constraintHorizontal_weight="16"
    />

</android.support.constraint.ConstraintLayout>