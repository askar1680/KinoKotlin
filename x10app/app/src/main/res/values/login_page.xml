<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="LoginPage"/>
	
	<style name="LoginPage.TextInputLayout">
		<item name="android:background">@null</item>
		<item name="android:textColorHint">@color/TextColorLight</item>
	</style>
	
	<style name="LoginPage.TextInputLayout.LoginName">
		<item name="android:hint">@string/Email</item>
	</style>
	
	<!--<style name="LoginPage.TextInputLayout.Password">-->
	<!--<item name="android:hint">@string/Password</item>-->
	<!--</style>-->
	
	<style name="LoginPage.EditText"
		   parent="TextStyle.Regular">
		<item name="android:drawablePadding">@dimen/PaddingMedium</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:backgroundTint">@color/Translucent</item>
		<item name="android:textColor">@color/TextColorLight</item>
	</style>
	
	<style name="LoginPage.EditText.LoginName">
		<item name="android:drawableStart">@drawable/ic_login_23</item>
		<item name="android:inputType">textEmailAddress</item>
	</style>
	<!---->
	<!--<style name="LoginPage.EditText.Password">-->
	<!--<item name="android:drawableStart">@drawable/ic_password_23</item>-->
	<!--<item name="android:inputType">textPassword</item>-->
	<!--<item name="android:imeOptions">actionUnspecified</item>-->
	<!--<item name="android:imeActionId">6</item>-->
	<!--</style>-->
	<!---->
	<style name="LoginPage.FormContainer">
		<item name="android:gravity">center</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingStart">30dp</item>
		<item name="android:paddingEnd">30dp</item>
		<item name="android:layout_gravity">bottom</item>
	</style>
	
	<style name="LoginPage.Logo">
		<item name="android:visibility">gone</item>
		<item name="android:src">@drawable/ic_full_logo_160</item>
	</style>
	
	<style name="LoginPage.AnimationLogo">
		<item name="android:src">@drawable/ic_full_logo_160</item>
	</style>
	
	<style name="LoginPage.AnimationBackground">
		<item name="android:background">@color/PrimaryDark</item>
	</style>
	
	<style name="LoginPage.Developer"
		   parent="TextStyle.Medium.Small">
		<item name="android:text">@string/Developers</item>
		<item name="android:textColor">@color/LightBlue</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:padding">@dimen/PaddingSmall</item>
		<item name="android:layout_marginBottom">@dimen/MarginMedium</item>
	</style>
	
	<style name="LoginPage.Title"
		   parent="TextStyle.Medium.Large">
		<item name="android:layout_gravity">top</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/TextColorLight</item>
		<item name="android:layout_marginTop">@dimen/MarginSmall</item>
		<item name="android:text">@string/Authorization</item>
	</style>
	
	<style name="LoginPage.MaskView">
		<item name="android:alpha">0</item>
		<item name="android:background">@color/PrimaryDark</item>
	</style>
	
	<style name="LoginPage.Line">
		<item name="android:background">@color/LightGrey</item>
		<item name="android:alpha">0.8</item>
	</style>
	
	<style name="LoginPage.Line.Margin">
		<item name="android:layout_marginBottom">@dimen/MarginLarge</item>
	</style>
	
	<style name="LoginPage.TextView"
		   parent="TextStyle"/>
	
	<style name="LoginPage.TextView.LoginTitle"
		   parent="TextStyle.Medium">
		<item name="android:layout_marginTop">@dimen/MarginMedium</item>
		<item name="android:layout_marginBottom">@dimen/MarginMedium</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/TextColorLightGrey</item>
		<item name="android:textSize">@dimen/TextSizeMedium</item>
		<item name="android:text">We will send code to your registered email address</item>
	</style>
	
	<style name="LoginPage.SignInForm">
		<item name="android:layout_marginTop">@dimen/MarginMedium</item>
		<item name="android:layout_marginBottom">@dimen/MarginMedium</item>
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center</item>
		<item name="android:alpha">1</item>
	</style>
	
	<style name="LoginPage.Button"
		   parent="ButtonStyle"/>
	
	<style name="LoginPage.Button.SignIn"
		   parent="ButtonStyle.Large.Fill">
		<item name="android:text">@string/SendCode</item>
		<item name="android:layout_marginStart">20dp</item>
		<item name="android:layout_marginEnd">20dp</item>
		<item name="android:layout_marginBottom">@dimen/MarginMedium</item>
	</style>
	
	<style name="LoginPage.LineContainer">
		<item name="android:gravity">center</item>
		<item name="android:orientation">horizontal</item>
	</style>
	
	<style name="LoginPage.OrText"
		   parent="TextStyle.Medium.Small">
		<item name="android:text">@string/Or</item>
		<item name="android:layout_marginStart">@dimen/MarginLarge</item>
		<item name="android:layout_marginEnd">@dimen/MarginLarge</item>
		<item name="android:textColor">@color/TextColorLight</item>
	</style>
	
	<style name="LoginPage.Button.Registration"
		   parent="ButtonStyle.Medium">
		<item name="android:paddingStart">20dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:paddingEnd">20dp</item>
		<item name="android:text">@string/Registration</item>
		<item name="android:layout_marginBottom">@dimen/MarginMedium</item>
	</style>
	
	<style name="LoginPage.ForgotPassword"
		   parent="TextStyle.Medium.Small">
		<item name="android:text">@string/ForgotPassword</item>
		<item name="android:alpha">0</item>
		<item name="android:textColor">@color/TextColorLight</item>
	</style>
	
	<string name="SendCode">Send Code</string>
</resources>